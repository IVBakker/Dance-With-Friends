doctype html
html
	head
		title Dance with Friends
		// Bootstrap
		link(href='static/css/bootstrap.min.css', rel='stylesheet', media='screen')
		link(rel='stylesheet/less', type='text/css', href='static/less/styles.less')
		script(src='static/js/lib/less.min.js', type='text/javascript')
		script(src='static/js/lib/vision.js', type='text/javascript')
	body
		#loading.text-center
		.container-fluid.game-container
			.row-fluid.game-container
				.span3.left-pane.pane
					#user-meta-container
				.span9.right-pane.pane
					#game-container
						video#webcam(autoplay='', width='640', height='480')
						img#arrow0(src='static/img/left_arrow_marker.png')
						img#arrow1(src='static/img/down_arrow_marker.png')
						img#arrow2(src='static/img/right_arrow_marker.png')
						canvas#canvas-source(width='640', height='480')
						canvas#canvas-blended(width='640', height='480')
						#arrow-spots
							.span2.spot-container
								#left-spot-arrow.left-spot.spot
							.span2.spot-container
								#down-spot-arrow.down-spot.spot
							.span2.spot-container
								#up-spot-arrow.up-spot.spot
							.span2.spot-container
								#right-spot-arrow.right-spot.spot
						#exclamation
						#arrows-container
							.row-fluid.full-container
								#left-arrows.span2.arrow-lane
								#down-arrows.span2.arrow-lane
								#up-arrows.span2.arrow-lane
								#right-arrows.span2.arrow-lane
		script(data-main='static/js/app/main', src='static/js/lib/require.min.js')
		script#template-arrow(type='template').
			<div class="arrow <%= klass %>">
			</div>
		script#template-usermeta(type='template').
			<h2 class="score">
			Score: <%= score %>
			<p> Perfect <%= perfect %></p>
			<p> Great <%= great %></p>
			<p> Good <%= good %></p>
			<p> Bad <%= bad %></p>
			</h2>
			<h2> Leaderboard </h2>
			<table class="table table-striped leaderboard">
			<% _.each(players, function(player) { %>
				<tr>
						<td><%= player.name %></td>
						<td><%= player.score %></td>
				</tr>
			<% }); %>
			</table>
